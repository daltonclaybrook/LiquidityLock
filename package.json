{
  "name": "liquidity-lock",
  "version": "1.0.0",
  "description": "A contract used to lock liquidity for Uniswap V3 pools",
  "main": "index.js",
  "scripts": {
    "build": "npx truffle compile",
    "generate-types": "npx typechain --target=truffle-v5 'build/contracts/*.json'",
    "test": "npx truffle test",
    "build-and-test": "npm run build && npm run generate-types && npm run test",
    "postinstall": "npm run build && npm run generate-types"
  },
  "author": "daltonclaybrook <daltonclaybrook@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "truffle": "^5.5.2"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^4.5.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@truffle/hdwallet-provider": "^2.0.3",
    "@typechain/truffle-v5": "^8.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "dotenv": "^16.0.0",
    "truffle-assertions": "^0.9.2",
    "truffle-plugin-verify": "^0.5.21",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4"
  }
}
